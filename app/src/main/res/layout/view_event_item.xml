        <!--android:layout_height="1dp"/>-->

    <CheckBox
        android:id="@+id/done_box"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_width="30dp"
        android:layout_height="30dp" />


    <TextView
        android:id="@+id/event_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/done_box"
        android:layout_toLeftOf="@+id/alarm_container"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="4dp"
        android:maxLength="27"
        android:textSize="14sp"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/box_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/alarm_container"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="15dp">

        <ImageView
            android:id="@+id/alarm_icon"
            android:src="@drawable/ic_alarm_black_36dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/alarm_time"
            android:textSize="12sp"
            android:padding="0dp"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

